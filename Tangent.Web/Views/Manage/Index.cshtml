@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" disabled />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="First_name"></label>
            <input asp-for="First_name" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Last_name"></label>
            <input asp-for="Last_name" class="form-control" disabled />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Position"></label>
            <input asp-for="Position" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Phone_number"></label>
            <input asp-for="Phone_number" class="form-control" disabled />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Gender"></label>
            <input asp-for="Gender" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Race"></label>
            <input asp-for="Race" class="form-control" disabled />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Birth_date"></label>
            <input asp-for="Birth_date" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Days_to_birthday"></label>
            <input asp-for="Days_to_birthday" class="form-control" disabled />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Github_user"></label>
            <input asp-for="Github_user" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Is_active"></label>
            <input asp-for="Is_active" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Is_staff"></label>
            <input asp-for="Is_staff" class="form-control" disabled />
        </div>
    </div>
</div>
